{
  "extends": [
    "config:recommended",
    "schedule:nonOfficeHours",
    ":prConcurrentLimitNone",
    ":prHourlyLimitNone",
    ":automergeLinters",
    ":automergeTesters"
  ],
  "packageRules": [
    {
      "managers": [
        "cargo"
      ],
      "groupName": "Rust Lockfile Updates",
      "schedule": [
        "daily"
      ],
      "enabled": true,
      "updateTypes": [
        "lockFileMaintenance"
      ]
    },
    {
      "managers": [
        "cargo"
      ],
      "groupName": "Rust Dependencies (Semver Incompatibles)",
      "separateMajorMinor": true,
      "matchUpdateTypes": [
        "major",
        "minor"
      ],
      "dependencyDashboardApproval": true
    }
  ]
}
